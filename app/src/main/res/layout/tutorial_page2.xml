<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hodnotenie otázok" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Každá otázka je ohodnotená od 1 do 5 hviezdičiek podľa toho, koľkokrát bola zaznemananá správna odpoveď.\n\n
*          žiadna správna odpoveď\n
**        ešte neriešená otázka\n
***      jedna správna odpoveď\n
****    dve správne odpovede\n
*****  aspoň tri správne odpovede" />

        <TextView
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Značenie otázok" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Po označení odpovede na otázku a jej vyhodnotení sa odpovede zafarbia nasledovne:\n\n
červená- označená nesprávna odpoveď\n
zelená- označená správna odpoveď\n
ružová- správna odpoveď, ktorá nie je označená" />

    </LinearLayout>

    <Button
        android:id="@+id/dalejButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Ďalej" />
</RelativeLayout>